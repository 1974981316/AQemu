<resources xmlns:tools="http://schemas.android.com/tools">
    <style
            name="Base.AppTheme"
        parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="windowLightStatusBar">true</item>
        <item name="windowLightNavigationBar">true</item>
        <item
            name="android:windowLightStatusBar"
            tools:targetApi="m">?windowLightStatusBar</item>
        <item
            name="android:windowLightNavigationBar"
            tools:targetApi="o_mr1">?windowLightNavigationBar</item>
        <item name="android:statusBarColor">?colorSurface</item>
           <item name="fontFamily">@font/josefin_sans</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
     
       


    </style>
    <style
        name="Base.AppTheme.Dark"
        parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="windowLightStatusBar">false</item>
        <item name="windowLightNavigationBar">false</item>
        <item
            name="android:windowLightStatusBar"
            tools:targetApi="m">?windowLightStatusBar</item>
        <item
            name="android:windowLightNavigationBar"
            tools:targetApi="o_mr1">?windowLightNavigationBar</item>
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="fontFamily">@font/josefin_sans</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
     

    </style>
  <style name="AppTheme" parent="Base.AppTheme" />
</resources>
